<!DOCTYPE HTML>
<html>

<head>
  <style>
    #horse {
      position: relative;
      cursor: pointer;
    }
  </style>
</head>

<body>

  <img id="horse" src="http://pic.616pic.com/ys_bnew_img/00/25/88/sujIJATjKF.jpg">


  <script>
    horse.onclick = function() {
      let start = Date.now();

      let timer = setInterval(function() {
        let timePassed = Date.now() - start;

        horse.style.left = timePassed / 5 + 'px';

        if (timePassed > 2000) clearInterval(timer);

      }, 20);
    }
  </script>


</body>

</html>
